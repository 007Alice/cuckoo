<header class="flex-form__header">
	<h4>
		<label class="custom-checkbox" for="file-selected">
			<input type="checkbox" id="file-selected" {{#if item.selected}}checked{{/if}} />
			<span></span>
		</label>

		<i class="fa fa-file-o"></i> {{item.filename}}
	</h4>
</header>

<ul class="flex-static__summary">
	<li>
		<strong>path</strong>
		{{item.relapath}}
	</li>
	<li>
		<strong>type</strong>
		{{item.finger.magic_human}}
	</li>
	<li>
		<strong>mime</strong>
		{{item.finger.mime_human}}
	</li>
	<li>
		<strong>size</strong>
		{{{file_size item.size}}}
	</li>
</ul>

<header class="flex-form__header">
	<h4><i class="fa fa-tasks"></i> Advanced options</h4>
	<small>Options you change here are persisted to this file only.</small>
</header>

<div class="per-file-options flex-form"></div>