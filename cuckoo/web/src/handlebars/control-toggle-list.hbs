<legend class="flex-form__field-title">{{title}} <a href="#"><i class="fa fa-info-circle"></i></a></legend>
<ul class="flex-form__toggle-list">
	{{#each options}}
		<li>
			<p>{{label}} {{#if description}}<span>{{description}}</span>{{/if}}</p>
			<label for="{{../name}}-{{name}}">
				<input type="checkbox" id="{{../name}}-{{name}}" name="{{../name}}" {{#if selected}}checked{{/if}} data-option="{{name}}" />
				<span></span>
			</label>
		</li>
	{{/each}}
	{{#if extraOptions}}
		<li class="toggle-list-seperator">
			<p>Extra options <a href="#"><i class="fa fa-info-circle"></i></a> <span><a href="#">What can I use?</a></span></p>
		</li>
		<li class="flex-form__table extra-options">
			<table>
				<thead>
					<tr>
						<th>name</th>
						<th>value</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<td><input type="text" placeholder="name" name="new-key" /></td>
						<td><input type="text" placeholder="value" name="new-value" /></td>
					</tr>
				</tfoot>
				<tbody></tbody>
			</table>
		</li>

	{{/if}}
</ul>
{{#if extraOptions}}
	<p class="description">To add a new option, type the option name + value and hit enter. it will add itself to the list. Remove an item by clicking the right remove icon.</p>
{{/if}}